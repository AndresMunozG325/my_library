<p id="notice"><%= notice %></p> 
<h1>Books</h1>
<%= link_to 'New Book', new_book_path %>

<br> 
<table>
    <thead> 
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Friend Name</th>
            <th>Lend Date</th>
            <th>Return Date</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.status %></td>
                <td><%= book.friendname %></td>
                <td><%= book.lenddate %></td>
                <td><%= book.returndate %></td>
                
                <td><%= link_to 'Show', book %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td><%= link_to 'Destroy', book, method: :delete, data: { confirm:'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @books %>
