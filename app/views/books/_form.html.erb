<%= form_with(model: book, local: true) do |form| %> 
    <% if book.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(book.errors.count, "error") %> on saving book:</h2>
            <ul>
                <% book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :title, 'Title' %>
        <%= form.text_field :title, id: :book_title %>
    </div>
    
    <div class="field">
        <%= form.label :author, 'Author' %>
        <%= form.text_field :author, id: :book_author %>
    </div>
    
    <div class="field">
        <%= form.label :status, 'Status' %>
        <%= form.select :status, Book.statuses.keys %>
    </div>
    
    <div class="field">
        <%= form.label :friendname, 'Friend Name' %>
        <%= form.text_field :friendname, id: :book_friendname %>
    </div>

    <div class="field">
        <%= form.label :lenddate, 'Lend Date' %>
        <%= form.date_field :lenddate, id: :book_lenddate %>
    </div>
    
    <div class="field">
        <%= form.label :returndate, 'Return Date' %>
        <%= form.date_field :returndate, id: :book_returndate %>
    </div>
    
    <div class="actions"> 
        <%= form.submit %>
    </div>
<% end %>